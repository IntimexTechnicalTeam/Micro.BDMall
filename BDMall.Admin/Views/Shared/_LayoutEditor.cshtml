}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet"/>
    <link href="~/Scripts/bootstrap-datetimepicker/css/bootstrap-datetimepicker.min.css" rel="stylesheet"/>
    <link href="~/Scripts/bootstrap-select/css/bootstrap-select.min.css" rel="stylesheet"/>
    <link href="~/Scripts/bootstraptable/css/bootstrap-table.min.css" rel="stylesheet"/>
    <link href="~/Scripts/bootstrap3-dialog/css/bootstrap-dialog.min.css" rel="stylesheet"/>
    <link href="~/Scripts/bDialog/css/b.dialog.bootstrap3.css" rel="stylesheet"/>
    <link href="~/Scripts/layui/lib/layui-v2.5.5/css/layui.css" rel="stylesheet"/>
    <link href="~/Scripts/layui/css/layuimini.css?v=2.0.4.2" rel="stylesheet"/>
    <link href="~/Content/admin/admin.css" rel="stylesheet"/>

</head>
<body>
    <div>
        @RenderBody()
    </div>

    <script src="~/Scripts/jquery-1.12.4.js"></script>
    <script src="~/Scripts/jquery.blockUI.js"></script>
    <script src="~/Scripts/jquery.cookie.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/vue.js"></script>
    <script src="~/Scripts/layui/lib/layui-v2.5.5/layui.js"></script>
    <script src="~/Scripts/layui/js/lay-config.js?v=2.0.0"></script>
    <script src="~/Scripts/bootstrap.js"></script>
    <script src="~/Scripts/bootstrap-datetimepicker/js/bootstrap-datetimepicker.min.js"></script>
    <script src="~/Scripts/bootstrap-select/js/bootstrap-select.min.js"></script>
    <script src="~/Scripts/bootstraptable/js/bootstrap-table.min.js"></script>
    <script src="~/Scripts/bootstrap3-dialog/js/bootstrap-dialog.min.js"></script>
    <script src="~/Scripts/bDialog/js/b.dialog.min.js"></script>

    <script src="~/Scripts/ueditor/ueditor.config.js"></script>
    <script src="~/Scripts/ueditor/ueditor.all.js"></script>

    <script type="text/javascript" charset="utf-8" src="~/Scripts/ueditor/lang/zh-cn/zh-cn.js"></script>
    <script type="text/javascript" charset="utf-8" src="~/Scripts/ueditor/lang/zh-hk/zh-hk.js"></script>
    <script type="text/javascript" charset="utf-8" src="~/Scripts/ueditor/lang/en/en.js"></script>

    <script type="text/javascript">
        var lang = $.cookie('Language');
        var langUC = "en";
        if (lang == "E") {
            langUC = "en";
        }
        else if (lang == "C") {
            langUC = "zh-hk";
        }
        else if (lang == "S") {
            langUC = "zh-cn";
        }
        if (!UE._bak_I18N) {
            UE._bak_I18N = UE.I18N;//備份所有語言
        }
        UE.I18N = {};//清空语言
        UE.I18N[langUC] = UE._bak_I18N[langUC];//加載當前語言
    </script>

    <script type="text/javascript" src="/Content/LanguageScript"></script>
    <script src="@Url.Content(BDMall.Utility.PathUtil.GetBoostrapTableLang(ViewBag.Lang.ToString()))"></script>

    <script src="~/Scripts/admin/vue-component/pager.js"></script>

    @RenderSection("scripts", required: false)
</body>
</html>
